! -*- compile-command: "xrdb -load ~/.Xresources" -*-

!!!!!!!!
! rofi !
!!!!!!!!

! settings
rofi.bw: 5
rofi.font: Terminus 8
rofi.color-enabled: true

! colors           bg      fg      bgalt   hlbg    hlfg
rofi.color-normal: #000000,#cccccc,#000000,#000000,#ff6000
rofi.color-urgent: #ffffff,#ffffff,#ffffff,#ffffff,#ffffff
rofi.color-active: #cccccc,#000000,#cccccc,#ff6000,#000000

! colors           bg      border  separator
rofi.color-window: #000000,#111111,#111111

!!!!!!!!!
! urxvt !
!!!!!!!!!

! settings
URxvt.termName: xterm-256color
URxvt.scrollBar: false
URxvt.font: xft:Iosevka SS04:size=14
URxvt.geometry: 80x30
URxvt.saveLines: 65535
URxvt.scrollTtyKeypress: true
URxvt.perl-ext-common:
URxvt.perl-ext:
URxvt.pastableTabs: false
URxvt.iso14755: false
URxvt.iso14755_52: false

! base colors
URxvt.background: #000000
URxvt.foreground: #aaaaaa

! fix blue readability
URxvt.color4: #0074ff
URxvt.color12: #0074ff

! font styles
URxvt.colorBD: #ffffff
URxvt.colorUL: #ff6000

! Local Variables:
! eval: (rainbow-mode)
! End:
