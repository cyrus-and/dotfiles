# main #
double_buffer                           yes
update_interval                         1

# window type
own_window                              yes
own_window_type                         desktop
own_window_argb_visual                  yes
own_window_argb_value                   200

# geometry #
minimum_size                            1920
alignment                               bottom_left
gap_x                                   0
gap_y                                   0
border_inner_margin                     2
border_outer_margin                     0
border_width                            0

# font #
use_xft                                 yes
xftfont                                 Terminus:size=8

# environment #
mpd_host                                localhost

# template #
default_color                           aaaaaa
color0                                  ff6000
template0                               $color0|$color

TEXT
 \
CPU ${color0}${cpu}%${color}\
 / MEM ${color0}${memperc}%${color}\
 / SWAP ${color0}${swapperc}%${color}\
 / ROOT ${color0}${fs_free /}${color}\
 / HOME ${color0}${fs_free /home}${color}\
 / UP ${color0}${upspeedf}KBps${color}\
 / DOWN ${color0}${downspeedf}KBps${color}\
${if_mpd_playing}${if_match "$mpd_status" == "Playing"} / PLAYING ${color0}${mpd_percent}% : ${scroll 100 ${mpd_artist} - ${mpd_album} - ${mpd_track}. ${mpd_title}}${color}${endif}${endif}\
$alignr\
${if_match "${exec dropbox status}" != "Aggiornato"}${color0}[...] ${color}${endif}\
${time %a %d %b} ${color0}@${color} ${time %H:%M}\
 \
